<div class="container">
  <%= render partial: 'spree/shared/blogs_breadcrumbs', locals: { blog: @blog, tag: nil, post: nil } %>
  <div class="row">
    <h1><%= @blog.title %></h1>
  </div>

<div class="row">
  <div class="col-12 col-md-8">
    <%= render 'posts' %>
  </div>

  <div class="col-12 col-md-4">
    <%= render partial: 'spree/shared/tag_cloud', locals: { posts: @posts.except(:limit, :offset) } %>
    <%= render 'spree/shared/recent_posts', recent_blog_posts: @posts.except(:limit, :offset).recent(10) %>
  </div>
</div>
